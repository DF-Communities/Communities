                              <div class="col-xs-12">
                                 <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12">
                                    <h2>
                                       <c:EdtText group="cke-home" key="block-title-2" context="{!edtContext}" text="Recipe for Cupcake Day"/>
